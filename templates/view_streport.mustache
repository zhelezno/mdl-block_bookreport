<div class="container-fluid">
    {{> block_bookreport/navbar}}
    <br>
    <h2>{{bookreport}}</h2>
     <form action="{{updatereporturl}}" method="POST" id="report">
        {{#report}}
            <div class="form-row">
                <div class="form-group col">
                    <label for="defaulttype_book">Название книги</label>
                    <input type="text" class="form-control" id="defaulttype_book" name="defaulttype_book" value="{{book}}" required disabled>
                </div>
                <div class="form-group col">
                    <label for="defaulttype_author">Автор</label>
                    <input type="text" class="form-control" id="defaulttype_author" name="defaulttype_author" value="{{author}}" required disabled>
                </div>
            </div>
        <div class="form-group">
            <label for="defaulttype_mainactors">Основные действующие лица</label>
            <textarea class="form-control" id="defaulttype_mainactors" name="defaulttype_mainactors" rows="3" required>{{mainactors}}</textarea>
        </div>
        <div class="form-group">
            <label for="defaulttype_mainidea">Главная идея</label>
            <textarea class="form-control" id="defaulttype_mainidea" name="defaulttype_mainidea" rows="5" required>{{mainidea}}</textarea>
        </div>
        <div class="form-group">
            <label for="defaulttype_quotes">Запомнившиеся цитаты</label>
            <textarea class="form-control" id="defaulttype_quotes" name="defaulttype_quotes" rows="5" required>{{quotes}}</textarea>
        </div>
        <div class="form-group">
            <label for="defaulttype_conclusion">Вывод/Предложения к внедрению</label>
            <textarea class="form-control" id="defaulttype_conclusion" name="defaulttype_conclusion" rows="7" required>{{conclusion}}</textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary" id="submitStandartreport" name="submitStandartreport">Править</button>      
        {{/report}}
    </form>
</div>