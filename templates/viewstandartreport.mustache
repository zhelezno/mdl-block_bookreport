{{!
    @template block_bookreport/myreportchange


    Example context (json):
    {
        
    }
}}

<div class="container">
     <form action="" method="POST" id="report">     

        {{#report}}
        <div class="form-group">
            <label for="defaulttype_Author">Автор</label>
            <input type="text" class="form-control" id="defaulttype_Author" name="defaulttype_Author" value="{{author}}" required disabled>
        </div>
        <div class="form-group">
            <label for="defaulttype_Book">Название книги</label>
            <input type="text" class="form-control" id="defaulttype_Book" name="defaulttype_Book" value="{{book}}" required disabled>
        </div>    
        <div class="form-group">
            <label for="defaulttype_Mainheroes">Основные действующие лица</label>
            <textarea class="form-control" id="defaulttype_Mainactors" name="defaulttype_Mainheroes" rows="3" required {{changecontrol}}>{{mainactors}}</textarea>
        </div>
        <div class="form-group">
            <label for="defaulttype_Mainidea">Главная идея</label>
            <textarea class="form-control" id="defaulttype_MainMainidea" name="defaulttype_Mainidea" rows="3" required {{changecontrol}}>{{mainidea}}</textarea>
        </div>
        <div class="form-group">
            <label for="defaulttype_Quotes">Запомнившиеся цитаты</label>
            <textarea class="form-control" id="defaulttype_quotes" name="defaulttype_quotes" rows="3" required {{changecontrol}}>{{quotes}}</textarea>
        </div>
        <div class="form-group">
            <label for="defaulttype_Conclusion">Вывод/Предложения к внедрению</label>
            <textarea class="form-control" id="defaulttype_Conclusion" name="defaulttype_Conclusion" rows="3" required {{changecontrol}}>{{conclusion}}</textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary" id="submitStandartreport" name="submitStandartreport">Править</button>      
        {{/report}}
    </form>
</div>