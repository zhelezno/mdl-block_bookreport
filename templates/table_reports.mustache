{{!
    @template block_bookreport/myreports


    Example context (json):
    {
        
    }
}}

<div class="container-fluid">
    <div class="allreports" id="allreports">
        {{> block_bookreport/navbar}}
        <br>
        <h2>{{all_my_reports}}</h2>
        <br>
        <div class="row no-gutters">
            <div class="col-md-12">
                <div class="row ">
                    <div class="col">
                        <div class="row no-gutters">
                            <div class="col-md-1">
                                <a href="#" id="calendariconstart">
                                    <div style="background-color: #12b3cd; height: 100%">
                                        <img width="70%" style="padding-left: 27%; padding-top: 10%" src="../bookreport/style/img/calendar-alt-solid.svg">
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-11 input-group">
                                <input type="text" class="form-control" id="start_date" placeholder="Дата начала" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="row no-gutters">
                            <div class="col-md-1">
                                <a href="#" id="calendariconend">
                                    <div style="background-color: #12b3cd; height: 100%">
                                        <img width="70%" style="padding-left: 27%; padding-top: 10%" src="../bookreport/style/img/calendar-alt-solid.svg">
                                    </div>
                                </a>
                            </div>
                            <div class="col-md-11 input-group">
                                <input type="text" class="form-control" id="end_date" placeholder="Дата конца" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <br>
        <br>
        <div>
            <button id="filter" class="btn btn-outline-info btn-sm">Фильтровать</button>
            <button id="reset" class="btn btn-outline-warning btn-sm">Сбросить</button>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <!-- Table -->
                <div class="table-responsive">
                    <table class="display" id="reporttable">
                        <thead>
                            <tr>
                                <th>Автор</th>
                                <th>Книга</th>
                                <th>ФИО</th>
                                <th>Отдел</th>
                                <th>Дата</th>
                                <th>Тип</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        </div>
    </div>
</div>
